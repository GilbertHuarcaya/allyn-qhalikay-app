<div class="container">
  <h1>Recetas</h1>
  <div class="accordion" id="accordionExample">
    <% @record.prescriptions.each do |prescription| %>

      <div class="accordion-item d-flex flex-column">
        <div class="d-flex">
          <h2 class="accordion-header flex-grow-1" id=<%= "record-heading#{prescription.id}" %>>
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=<%= "#record-collapse#{prescription.id}" %> aria-expanded="false" aria-controls=<%= "record-collapse#{prescription.id}" %>>
              <div class="d-flex font-accordion">
                <img src="https://www.svgrepo.com/show/76803/hospital.svg" width="30px" class="mr-3" alt="Logo-hospital">
                <span><%= prescription.title.capitalize %></span><span class="fecha">Fecha de Atenci√≥n: <%= @record.appointment %></span>

              </div>
            </button>
          </h2>
          <%# <% if current_user.doctor %>
          <div class="d-flex align-items-center btn-back-color">
            <%= link_to "Descargar", '#', class: "btn btn-primary" %>
          </div>
          <%# <% end %>
        </div>

        <div id=<%= "record-collapse#{prescription.id}" %>  class="accordion-collapse collapse" aria-labelledby=<%= "record-heading#{prescription.id}" %> >
          <div class="accordion-body resultados-sin-vinetas">

              <%# <% if prescription.photo.present? %>

                  <div class="d-flex justify-content-between align-items-center espaciado">
                    <%= cl_image_tag prescription.photo.key, class: "width-images-results" %>
                  </div>

              <%# <% end %>

          </div>
      </div>
  </div>
  <% end %>
  <%= link_to "Volver", records_path, class: "btn btn-primary" %>
</div>
</div>
