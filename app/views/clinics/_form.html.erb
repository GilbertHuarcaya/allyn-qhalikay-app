<div
  class="view flex-grow-1"
  style="background-image: url('https://images.unsplash.com/photo-1581982231900-6a1a46b744c9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80'); background-repeat: no-repeat; background-size: cover; background-position: center center;"
>
  <div class="container bg-image">
    <div class="col-12 col-md-6 offset-lg-3 ">
      <div class="bg-white big-div p-3 shadow">
         <div
          class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1576091160550-2173dba999ef?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);"
        ></div>
         <br />
      <% if @clinic.id.present? %>
        <h2 class="text-black text-center">¡Actualiza los datos de tu centro medico!</h2>
      <% else %>
        <h2 class="text-black text-center">¡Ingresa los datos de tu centro medico!</h2>
      <% end %>
          <br />
        <%= simple_form_for @clinic do |f| %>
          <%= f.error_notification %>
          <%= if f.object.errors[:base].present?
                f.error_notification message: f.object.errors[:base].to_sentence
              end %>

          <div class="form-inputs form1">
            <%= f.input :name, label: "Nombre del Centro Medico", placeholder: "Hospital General" %>
            <%= f.input :description, label: "Descripción o detalles", placeholder: "Descripcion general" %>
            <%= f.input :address, label: "Dirección", placeholder: "Av.Los fresnos 123" %>
            <%= f.input :phone, label: "Teléfono para consultas y citas", placeholder: "01 4841362" %>
            <br />
            <%= f.input :photos, label: "Multiples fotos para mostrar collage", as: :file, input_html: { multiple: true } %>

            <%= f.input :photo, label: "Una sola foto para mostrar de fondo", as: :file %>
          </div>
            <br>
          <div class="form-actions d-flex">
          <% if @clinic.id.present? %>
            <%= f.button :submit, value: "Actualizar", class: "btn btn-flat" %>
          <% else %>
            <%= f.button :submit, value: "Crear Centro medico", class: "btn btn-flat" %>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
